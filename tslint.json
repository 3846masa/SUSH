{
  "extends": "tslint-config-valorsoft",
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],

  "rules": {
    "no-unused-variable": [true, {
      "ignore-pattern": "^_"
    }],
    "directive-selector-prefix": [true, "SUSH"],
    "component-selector-prefix": [true, "SUSH"],
    "pipe-naming": [true, "camelCase", "SUSH"],

    // Own Rules
    "only-arrow-functions": [true, "allow-declarations"]
  }
}
